<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"

        style="@style/CardViewItemTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/historyItemImage"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/HistoryItemImageTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/historyItemImage"
                android:layout_toRightOf="@+id/historyItemImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                style="@style/HistoryItemTextTheme">

                <TextView
                    android:id="@+id/historyItemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HistoryItemTextTheme"/>

                <TextView
                    android:id="@+id/historyItemApiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HistoryItemApiTextTheme"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>